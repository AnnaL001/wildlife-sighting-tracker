{{#partial "content"}}
  <section id="actions">
    <div class="container">
      <div class="d-flex flex-column flex-sm-row mt-5 mb-3">
        <a href="animals/endangered-animals/new">
          <button class="btn btn-success">
            <i class="fa-solid fa-circle-plus"></i>
            Add endangered animal
          </button>
        </a>
        <a href="animals/thriving-animals/new">
          <button class="btn btn-success mx-0 my-2 my-sm-0 mx-sm-4">
            <i class="fa-solid fa-circle-plus"></i>
            Add thriving animal
          </button>
        </a>
      </div>
    </div>
  </section>
  <section id="endangered-animals">
    <div class="container">
      <h2 class="mt-5">Endangered</h2>
      <table class="table table-responsive table-striped table-hover my-5">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Category</th>
          <th scope="col">Image</th>
          <th scope="col">Name</th>
          <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
          {{#each endangered}}
            <tr>
              <th scope="row">{{@index_1}}</th>
              <td>
                <span class="badge bg-secondary py-1">{{category}}</span>
              </td>
              <td>
                <img class="img-fixed-size img-thumbnail"
                     src="{{image}}"
                     alt="An animal's image">
              </td>
              <td>
                <p class="fw-light">{{name}}</p>
              </td>
              <td>
                <a href="/animals/{{id}}">
                  <button class="btn btn-success">
                    <i class="fa-solid fa-eye"></i>
                    View
                  </button>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
  <section id="thriving-animals">
    <div class="container">
      <h2 class="mt-5">Thriving</h2>
      <table class="table table-responsive table-striped table-hover my-5">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Category</th>
          <th scope="col">Image</th>
          <th scope="col">Name</th>
          <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each thriving}}
          <tr>
            <th scope="row">{{@index_1}}</th>
            <td>
              <span class="badge bg-secondary py-1">{{category}}</span>
            </td>
            <td>
              <img class="img-fixed-size img-thumbnail"
                   src="{{image}}"
                   alt="An animal's image">
            </td>
            <td>
              <p class="fw-light">{{name}}</p>
            </td>
            <td>
              <a href="/animals/{{id}}">
                <button class="btn btn-success">
                  <i class="fa-solid fa-eye"></i>
                  View
                </button>
              </a>
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </section>
{{/partial}}
{{>layout2.hbs}}